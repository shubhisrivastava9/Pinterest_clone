<%- include ./partials/header.ejs %>

<main class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-700 text-white flex items-center justify-center px-4">

  <div class="bg-gradient-to-r from-zinc-800 via-zinc-900 to-black p-10 rounded-2xl shadow-2xl w-full max-w-3xl animate-fade-in-up">
    <h1 class="text-5xl font-extrabold text-center mb-6 tracking-tight">ðŸ“¸ Create a New Post</h1>
    <hr class="border-pink-600 mb-8 w-1/2 mx-auto">

    <form action="createpost"  method="POST" class="space-y-6" enctype="multipart/form-data">
      <!-- Image Upload -->
      <div>
        <label class="block text-sm font-semibold mb-2">Upload Image</label>
        <input name="file" class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition-all" type="file" required/>
      </div>

      <!-- Title -->
      <div>
        <label class="block text-sm font-semibold mb-2">Title</label>
        <input name="title" class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 transition-all" type="text" placeholder="Enter a catchy title" required/>
      </div>

      <!-- Description -->
      <div>
        <label class="block text-sm font-semibold mb-2">Description</label>
        <textarea name="description" rows="5" class="w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-pink-500 transition-all" placeholder="Describe your post..."></textarea>
      </div>
 
      <!-- Submit Button -->
      <div class="text-center">
        <input class="bg-pink-600 hover:bg-pink-700 transition-colors px-8 py-3 text-white font-semibold rounded-lg shadow-lg hover:shadow-pink-500/50 cursor-pointer transform hover:scale-105 duration-200" type="submit" value="ðŸš€ Create Post">
      </div>
    </form>
  </div>

</main>

